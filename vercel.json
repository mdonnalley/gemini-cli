{
  "installCommand": "npm ci --ignore-scripts",
  "buildCommand": "npm run -w @google/gemini-cli-core build && npm run -w @google/gemini-cli build && cd packages/codey-hosted && npm run build",
  "outputDirectory": "packages/codey-hosted/.next",
  "framework": "nextjs",
  "env": {
    "NODE_ENV": "production"
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    }
  ]
}
